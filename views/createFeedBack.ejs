<%- include("./layout/header.ejs") %>

<main class="create_complaint_box">
          
  <section class="Hero">
  <form action="/feedback/new" method="post" enctype="multipart/form-data" >
    <h3>Launch Your Complaints</h3>

    <input type="text" name="fullname" id="" placeholder="Fullname" required><br>

    <input type="text" name="title" id="" placeholder="Title" required><br>

    <!-- Remove the duplicate 'name' attribute here -->
    <textarea name="content" id="" cols="30" rows="10" placeholder="Your content goes here..." required></textarea><br>

    <input type="file" name="featureImage" id="" required><br>

    <label for="visibility">Visibility:</label>
    <input type="radio" id="visible" name="visibility" value="visible" checked>
    <label for="visible">Visible</label>
    <input type="radio" id="anonymous" name="visibility" value="anonymous">
    <label for="anonymous">Anonymous</label><br>


    <input type="submit" value="submit">
  </form>
        
  </section>
</main>  

<%- include("./layout/footer.ejs") %>
